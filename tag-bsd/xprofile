	# pulseaudio --kill
# fi
# pulseaudio --start &

#if which urxvtd ; then
#pgrep -u "$USER" urxvtd || urxvtd -q -f -o 
#fi

# load local profile
[ -f "$HOME/.xprofile.local" ] && . "$HOME/.xprofile.local" 

